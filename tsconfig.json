{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "express.d.ts" // Or "types/express.d.ts" depending on where you placed it
],
  "exclude": ["node_modules"]
}
